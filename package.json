{
  "name": "commercehub",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run  --watch src/server.ts",
    "test": "bun test",
    "init": "bun run prisma migrate deploy && bun run prisma db seed",
    "start": "bun run src/server.ts",
    "db:dev": "bun run prisma migrate dev",
    "db:reset": "bun run prisma migrate reset --force",
    "db:seed": "bun run prisma db seed",
    "db:deploy": "bun run prisma migrate deploy",
    "db:push": "bun run prisma db push",
    "db:generate": "bun run prisma generate",
    "db:status": "bun run prisma migrate status",
    "openapi:build": "bun run scripts/merge-openapi.ts"
  },
  "prisma": {
    "seed": "bun run prisma/seed.ts"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.2",
    "@types/bun": "latest",
    "@types/cookie-parser": "1.4.8",
    "@types/express": "5.0.1",
    "@types/jsonwebtoken": "9.0.9",
    "typescript": "~5.9.3"
  },
  "dependencies": {
    "@prisma/client": "^6.16.3",
    "@scalar/express-api-reference": "^0.8.13",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.13",
    "@types/nodemailer": "^6.4.17",
    "bcrypt": "5.1.1",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "express": "4.21.2",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "9.0.2",
    "mime-types": "^3.0.2",
    "multer": "^2.0.1",
    "nodemailer": "^6.10.1",
    "prisma": "^6.16.3",
    "sharp": "^0.34.2",
    "zod": "^3.24.4"
  }
}